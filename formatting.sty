\ProvidesPackage{formatting}
% В этом стилевом файле будет предложены новые команды
% \player{name}[remark] --- это будет подсвечиваться автор и если есть ремарка, то она будет в скобках
% \remark{some text} --- в этой команде будет описываться происходящее на сцене 
\usepackage{ifthen}
\usepackage{pdfpages}

\newcommand{\player}[2][x]{\par{\normalfont\bfseries #2}\ifthenelse{\equal{#1}{x}}{}{{\normalfont(#1)}}. }
\newcommand{\action}[1]{\begin{center}{\LARGE #1}\end{center}\nopagebreak[4]}
\newcommand{\scene}[1]{\begin{center}{\Large #1}\end{center}\nopagebreak[4]}
\newcommand{\innerremark}[1]{{\itshape (#1.)}}
\newcommand{\remark}[1]{{\par\vspace{1em}\itshape #1} \vspace{1em}}

\newcommand{\examplecode}[1]{{\normalfont\par\texttt{#1}\par}}
\newcommand{\showtext}[2]{\par\fbox{\begin{minipage}{#2\textwidth}{\small\texttt{#1}}\end{minipage}}}
%\newcommand{\showpdf}[1]{{\noindent\centering\begin{figure}\includegraphics[scale=.5]{#1}\end{figure}}}
\newcommand{\showpdf}[1]{\includepdf[pages=1,scale=.3,frame,delta=1 1]{#1}}
